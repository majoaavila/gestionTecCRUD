 <div class="container-responsive">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-xs-6">
							<h2><b>Empleados</b></h2>
						</div>
						<div class="col-xs-6">
						<%= link_to new_employee_path, class: "btn btn-success" do %>
							<i class="material-icons">&#xE147;</i> <span>Nuevo empleados</span>
							<%end%>
						</div>
					</div>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>
                            <!-- checar que otros atributos son necesrios para empleados -->
              <th>ID</th>
							<th>Nombre</th>
							<th>Apellido</th>
							<th>Sexo</th>
							<th>Puesto</th>
							<th>Turno</th>
              <th>Salario</th>
							<th>Estatus</th>
						</tr>
					</thead>
					<tbody>
            <% @employees.each do |employee| %>
            <tr>
              <td><%=employee.id%></td>
							<td><%=employee.name%></td>
              <td><%=employee.last_name%></td>
              <td><%=employee.sex%></td>
              <td><%=employee.position%></td>
              <td><%=employee.shift%></td>
              <td>$<%=employee.salary%></td>
              <td><%=employee.status ? "Activo" : "Inactivo"%></td>
              	<td>
								<%= link_to edit_employee_path(employee.id), class: "edit" do%>
								<i class="material-icons edit" data-toggle="tooltip" title="Edit">&#xE254;</i>
								<%end%>
								<%= link_to employee, method: :delete, class: "delete", :data => { :confirm => "Seguro que quieres borrar a #{employee.name}" } do%>
								<i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
								<%end%>
							</td>
            <% end %>
						</tr>
					</tbody>
				</table>
		</div>
    </div>
