<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> Errores </h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="modal-body">
    <%= form.label :Name, "Nombre", style: "display: block" %>
    <%= form.text_field :Name, class: "form-control", class: "form-control" %>
  </div>

  <div>
    <%= form.label :LastName, "Apellido", style: "display: block" %>
    <%= form.text_field :LastName, class: "form-control", class: "form-control" %>
  </div>

  <div>
    <%= form.label :Sex,"Genero", style: "display: block" %>
    <%= form.select(:Sex, ["Masculino", "Femenino", "No binario"], {},{class: "form-control"} )%>
  </div>

  <div>
    <%= form.label :birthDate, "Fecha de nacimiento", style: "display: block" %>
    <%= form.date_field :birthDate, class: "form-control" %>
  </div>

  <div>
    <%= form.label :email,"Correo electronico" ,style: "display: block" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div>
    <%= form.label :phone, "Celular",style: "display: block" %>
    <%= form.telephone_field  :phone, class: "form-control" %>
  </div>

  <div>
    <%= form.label :state, "Estado",style: "display: block" %>
    <%= form.text_field :state, class: "form-control" %>
  </div>

  <div>
    <%= form.label :city, "Ciudad",style: "display: block" %>
    <%= form.text_field :city, class: "form-control" %>
  </div>

  <div>
    <%= form.label :colony, "Colonia",style: "display: block" %>
    <%= form.text_field :colony, class: "form-control" %>
  </div>

  <div>
    <%= form.label :street, "Calle",style: "display: block" %>
    <%= form.text_field :street, class: "form-control" %>
  </div>

  <div>
    <%= form.label :houseNumber, "Numero de casa",style: "display: block" %>
    <%= form.text_field :houseNumber, class: "form-control" %>
  </div>

  <div>
    <%= form.label :cp, "Codigo postal",style: "display: block" %>
    <%= form.text_field :cp, class: "form-control" %>
  </div>

  <div>
    <%= form.label :puntos, "Puntos",style: "display: block" %>
    <%= form.text_field :puntos, class: "form-control" %>
  </div>
  <div>
  <div class="modal-footer">
  <%= link_to "Cancelar", clients_path, class: "btn btn-default" %>
    <%= form.submit "Confirmar", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
