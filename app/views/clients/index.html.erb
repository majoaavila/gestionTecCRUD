 <div class="container-responsive">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-xs-6">
							<h2><b>Clientes</b></h2>
						</div>
						<div class="col-xs-6">
						<%= link_to new_client_path, class: "btn btn-success" do %>
							<i class="material-icons">&#xE147;</i> <span>Nuevo cliente</span>
							<%end%>
						</div>
					</div>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>
                            <!-- checar que otros atributos son necesrios para empleados -->
                            <th>ID</th>
							<th>Nombre</th>
							<th>Apellido</th>
							<th>Género</th>
							<th>Fecha de nacimiento</th>
                            <th>Email</th>
                            <th>Teléfono</th>
							<th>Estado</th>
							<th>Municipio</th>
							<th>Colonia</th>
							<th>Calle</th>
							<th>Número</th>
							<th>C.P.</th>
							<th>Puntos</th>
							<th>Estatus</th>
						</tr>
					</thead>
					<tbody>
            <% @clients.each do |client| %>
			<tr>
              <td><%=client.id%></td>
							<td><%=client.Name%></td>
              <td><%=client.LastName%></td>
              <td><%=client.Sex%></td>
              <td><%=client.birthDate%></td>
              <td><%=client.email%></td>
              <td><%=client.phone%></td>
              <td><%=client.state%></td>
              <td><%=client.city%></td>
              <td><%=client.colony%></td>
              <td><%=client.street%></td>
              <td><%=client.houseNumber%></td>
              <td><%=client.cp%></td>
              <td><%=client.puntos%></td>
              <td><%=client.status ? "Activo" : "Inactivo"%></td>
              	<td>
								<%= link_to edit_client_path(client.id), class: "edit" do%>
								<i class="material-icons edit" data-toggle="tooltip" title="Edit">&#xE254;</i>
								<%end%>
								<%= link_to client, method: :delete, class: "delete", :data => { :confirm => "Seguro que quieres borrar a #{client.Name}" } do%>
								<i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
								<%end%>
							</td>
            <% end %>
						</tr>
					</tbody>
				</table>
		</div>
    </div>
