 <div class="container-responsive">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-xs-6">
							<h2><b>Clientes</b></h2>
						</div>
						<div class="col-xs-6">
							<a href="#addCostumerModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Nuevo cliente</span></a>
							<a href="#deleteCostumerModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Eliminar</span></a>
						</div>
					</div>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>
								<span class="custom-checkbox">
									<input type="checkbox" id="selectAll">
									<label for="selectAll"></label>
								</span>
							</th>
                            <!-- checar que otros atributos son necesrios para empleados -->
                            <th>ID</th>
							<th>Nombre</th>
							<th>Apellido</th>
							<th>Género</th>
							<th>Fecha de nacimiento</th>
                            <th>Email</th>
                            <th>Teléfono</th>
							<th>Estado</th>
							<th>Municipio</th>
							<th>Colonia</th>
							<th>Calle</th>
							<th>Número</th>
							<th>C.P.</th>
							<th>Puntos</th>
							<th>Estatus</th>
						</tr>
					</thead>
					<tbody>
						<tr>
            <% @clients.each do |client| %>
            <td>
								<span class="custom-checkbox">
									<input type="checkbox" id="checkbox1" name="options[]" value="1">
									<label for="checkbox1"></label>
								</span>
							</td>
              <td><%=client.id%></td>
							<td><%=client.name%></td>
              <td><%=client.lastName%></td>
              <td><%=client.sex%></td>
              <td><%=client.birthDate%></td>
              <td><%=client.email%></td>
              <td><%=client.phone%></td>
              <td><%=client.state%></td>
              <td><%=client.city%></td>
              <td><%=client.colony%></td>
              <td><%=client.street%></td>
              <td><%=client.houseNumber%></td>
              <td><%=client.cp%></td>
              <td><%=client.puntos%></td>
              <td><%=client.status%></td>
              	<td>
								<a href="#editCostumerModal" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
								<a href="#deleteCostumerModal" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
							</td>
            <% end %>
						</tr>
					</tbody>
				</table>
				<div class="clearfix">
					<div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
					<ul class="pagination">
						<li class="page-item disabled"><a href="#">Previous</a></li>
						<li class="page-item active"><a href="#" class="page-link">1</a></li>
						<li class="page-item"><a href="#" class="page-link">2</a></li>
						<li class="page-item"><a href="#" class="page-link">3</a></li>
						<li class="page-item"><a href="#" class="page-link">4</a></li>
						<li class="page-item"><a href="#" class="page-link">5</a></li>
						<li class="page-item"><a href="#" class="page-link">Next</a></li>
					</ul>
				</div>
			</div>
		</div>
    </div>
