 <div class="container-responsive">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-xs-6">
							<h2><b>Clientes</b></h2>
						</div>
						<div class="col-xs-6">
						<%= link_to new_client_path, class: "btn btn-success" do %>
							<i class="material-icons">&#xE147;</i> <span>Nuevo cliente</span>
							<%end%>
						</div>
					</div>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>
                            <!-- checar que otros atributos son necesrios para empleados -->
                            <th>ID</th>
							<th>Nombre</th>
							<th>Apellido</th>
							<th>Fecha de nacimiento</th>
                            <th>Email</th>
                            <th>Teléfono</th>
							<th>Estado</th>
							<th>Municipio</th>
							<th>Colonia</th>
							<th>Calle</th>
							<th>Número</th>
							<th>C.P.</th>
							<th>Puntos</th>
							<th>Estatus</th>
						</tr>
					</thead>
					<tbody>
            <% @clients.each do |client| %>
			<tr>
              <td><%=client.id%></td>
							<td><%=client.Name%></td>
              <td><%=client.LastName%></td>
              <td><%=client.birthDate%></td>
              <td><%=client.email%></td>
              <td><%=client.phone%></td>
              <td><%=client.state%></td>
              <td><%=client.city%></td>
              <td><%=client.colony%></td>
              <td><%=client.street%></td>
              <td><%=client.houseNumber%></td>
              <td><%=client.cp%></td>
              <td><%=client.puntos%></td>
              <td><%=client.status ? "Activo" : "Inactivo"%></td>
              	<td>
								<%= link_to edit_client_path(client.id), class: "edit" do%>
								<i class="material-icons edit" data-toggle="tooltip" title="Edit">&#xE254;</i>
								<%end%>
								<%if current_employee.admin?%>
								 <button onclick=<%="togglePasswordInput(#{client.id})"%>  class="btn btn-danger" id="delete-client-btn">
								<i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
								</button>
								<div id=<%="password-input-#{client.id}"%> style="display: none;">
                   <%= form_tag confirm_password_clients_path(client.id),method: :delete do %>
                      <%= label_tag :password, "Enter your password:" %>
                      <%= password_field_tag :password, nil, class: "form-control" %>
                      <%= submit_tag "Confirm", class: "btn btn-primary", id: "delete-client" %>
                </div>
              <%end%>
			  <%end%>
							</td>
            <% end %>
						</tr>
					</tbody>
				</table>
		</div>
    </div>
<script>
   function togglePasswordInput(id) {
    let passwordInput = document.getElementById(`password-input-${id}`);
    if (passwordInput.style.display === "none") {
      passwordInput.style.display = "block";
    } else {
      passwordInput.style.display = "none";
    }
  }
</script>
