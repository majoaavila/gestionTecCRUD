<%= form_with(model: supplier) do |form| %>
  <% if supplier.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(supplier.errors.count, "error") %> Errores</h2>

      <ul>
        <% supplier.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name,"Nombre" ,style: "display: block" %>
    <%= form.text_field :name, class: "form-control"  %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: "form-control"  %>
  </div>

  <div>
    <%= form.label :phone, "Telefono",style: "display: block" %>
    <%= form.text_field :phone, class: "form-control"  %>
  </div>

  <div>
    <%= form.label :arrive_date,"Fecha de llegada" ,style: "display: block" %>
    <%= form.date_field :arrive_date, class: "form-control"  %>
  </div>

  <div>
    <%= form.label :rfc, style: "display: block" %>
    <%= form.text_field :rfc, class: "form-control"  %>
  </div>
<%unless current_page?(new_supplier_path)%>
   <div>
    <%= form.label :current_password,class: "form-label" %>
    <%= form.password_field :current_password,  class: "form-control", id: "client_current_password" %>
  </div>
  <%end%>
  <div class="modal-footer">
    <%= link_to "Cancelar", suppliers_path, class: "btn btn-default" %>
    <%= form.submit "Confirmar", class: "btn btn-success" %>
  </div>
<% end %>
